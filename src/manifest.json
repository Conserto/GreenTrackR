{
  "manifest_version": 3,
  "name": "GreenTrackR",
  "description": "__MSG_extDesc__",
  "version": "2.2.3",
  "icons": {
    "64": "images/logo.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "browsingData",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "src/content-scripts/contentScripts.ts"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "devtools_page": "src/devtools-page.html",
  "action": {
    "default_icon": "images/logo.png",
    "default_title": "GreenTrackR",
    "default_popup": "src/menu.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
