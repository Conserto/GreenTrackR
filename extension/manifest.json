{
  "manifest_version": 3,
  "name": "GreenTrackr",
  "description": "Evaluez l'empreinte environnementale de votre site Web",
  "version": "2.0.0",
  "icons": {
    "64": "images/logo.png"
  },
  "default_locale": "fr",
  "permissions": ["activeTab", "tabs", "browsingData", "storage", "webNavigation", "webRequest"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/contentScripts.ts"]
    }
  ],
  "host_permissions": ["*://*/*"],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "devtools_page": "extension/devtools-page.html",
  "action": {
    "default_icon": "images/logo.png",
    "default_title": "GreenTrackr",
    "default_popup": "extension/menu.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
